<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/bg_lanbai"
    tools:context=".UploadActivity">

    <TextView
        android:id="@+id/up_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="18dp"
        android:textColor="@color/baise"
        android:text="请输入商品标题" />

    <EditText
        android:id="@+id/up_title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/up_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/baise"
        android:textSize="18dp"
        android:text="请输入商品描述" />

    <EditText
        android:id="@+id/up_detail2"
        android:layout_width="match_parent"
        android:layout_height="143dp"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="139dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_uppic"
            android:layout_width="136dp"
            android:layout_height="132dp"
            android:layout_marginLeft="10dp"
            android:background="@color/baise"
            app:srcCompat="@mipmap/uppic2" />

        <ImageView
            android:id="@+id/img_uppic"
            android:layout_width="100dp"
            android:layout_height="133dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_upcycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_shape"
            android:text="自行车发布"
            android:textColor="@color/baise"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_upbook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_shape"
            android:text="书本发布"
            android:textColor="@color/baise"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>