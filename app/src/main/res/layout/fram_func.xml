<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="个人信息板块"
            android:textColor="#00BBFF"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_func01"
            style="@style/my_itme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="西财教务处" />

        <Button
            android:id="@+id/btn_func02"
            style="@style/my_itme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="课程中心" />

        <Button
            android:id="@+id/btn_func03"
            style="@style/my_itme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="公共信息" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="351dp"
        android:layout_height="286dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="307dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/linearLayout2"
            app:layout_constraintVertical_bias="0.98">

            <TextView
                android:id="@+id/funcleft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="服务板块"
                android:textColor="#00BBFF"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn_func04"
                style="@style/my_itme3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="失物招领" />

            <Button
                android:id="@+id/btn_func05"
                style="@style/my_itme3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="西财Tips" />

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/fuwu_func" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="307dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/linearLayout2"
            app:layout_constraintVertical_bias="0.98">

            <TextView
                android:id="@+id/funcright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="跳蚤市场"
                android:textColor="#00BBFF"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn_func06"
                style="@style/my_itme3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="二手自行车" />

            <Button
                android:id="@+id/btn_func07"
                style="@style/my_itme3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="二手书" />

            <ImageView
                android:id="@+id/imageView22"
                android:layout_width="194dp"
                android:layout_height="156dp"
                app:srcCompat="@mipmap/ershou_func02" />

        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>